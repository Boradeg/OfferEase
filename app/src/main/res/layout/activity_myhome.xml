<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Myhome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/gredient3"
        android:id="@+id/toolbarLayoutMain"
        >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pngegg" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Geofencing Food Place"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />



    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/toolbarLayoutMain"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/img4" />

    <androidx.cardview.widget.CardView
        android:layout_below="@id/img"
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="18dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/rel_img"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:elevation="20dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/color2"
                android:layout_height="70dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop"
                    android:padding="12dp"
                    />

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/rel_img"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/text_avg_scores4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Owner"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_bold"/>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_avg_scores4"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Hotel, Supermarket, Franchises"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/owner"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="18dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/rel_img1"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:elevation="20dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/color3"
                android:layout_height="70dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/teamwork_two"
                    android:id="@+id/img2"
                    android:padding="7dp"
                    />

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/rel_img1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_bold"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male, Female, Other"
                    android:layout_below="@id/text1"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>